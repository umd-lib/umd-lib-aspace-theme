<section id="header">
  <div class="d-flex row align-items-center px-4">
    <%# UMD Customization %>
    <div class="col-lg-2 col-md-3 col-sm-4 col-4">
      <a href="//lib.umd.edu" target="_blank"><img id="logo-header" class="img-fluid" width="170px" alt="University of Maryland Libraries Logo" src="/assets/images/liblogo.png"></a>
    </div>
    <div class="col-lg-6 col-md-5 col-sm-8 col-8">
		  <% if request.original_fullpath == '/' %>
        <span class="app-title"><%= t('brand.title') %></span>
		  <% else %>
        <a title="<%=t('brand.title_link_text') %>" href="<%= AppConfig[:public_proxy_url] %>" class="app-title"><%= t('brand.title') %></a>
      <% end %>
    </div>
    <div class="d-flex col-lg-4 col-md-4 col-sm-12 col-12 justify-content-md-end justify-content-sm-start">
      <div class="website-feedback">
        <p class="website-feedback-label">Help us improve our website</p>
        <a class="website-feedback-link" href="<%= AppConfig[:website_feedback_url] %>">Send feedback</a>
      </div>
    </div>
    <%# End UMD Customization %>
  </div>
</section>
